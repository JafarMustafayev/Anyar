@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Team

<div class=" mx-5 container">
    <form method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-4 form-group">
                <label asp-for="Fullname">Fullname</label>
                <input asp-for=Fullname class="form-control" placeholder="Enter fullname">
               <span class="text-danger"  asp-validation-for="Fullname"></span>
            </div>
            <div class=" col-3 form-group">
                <label asp-for="Position">Position</label>
                <input asp-for=Position class="form-control"placeholder="Enter position">
               <span class="text-danger"  class="text-danger" asp-validation-for="Position"></span>
            </div>
            <div class=" col-1 form-group">
                <label asp-for="Order">Order</label>
                <input asp-for=Order class="form-control">
               <span class="text-danger"  asp-validation-for="Order"></span>
            </div>
        </div>

        <div class="form-group col-8">
            <label asp-for="Description">Password</label>
            <textarea  asp-for=Description class="form-control"  placeholder="enter discription"> </textarea>
        </div>

        <div class="row ">
            <div class="col-4">
                <label asp-for="InstagramUrl">Instagram</label>
                <input asp-for=InstagramUrl class="form-control" >
               <span class="text-danger"  asp-validation-for="InstagramUrl"></span>
            </div>

            <div class="col-4">
                <label asp-for="FacebookUrl">Facebook</label>
                <input asp-for=FacebookUrl class="form-control">
               <span class="text-danger"  asp-validation-for="FacebookUrl"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="LinkedinUrl">Linkedin</label>
                <input asp-for=LinkedinUrl class="form-control" >
               <span class="text-danger"  asp-validation-for="LinkedinUrl"></span>
            </div>

            <div class="col-4">
                <label asp-for="TwitterUrl">Twitter</label>
                <input asp-for=TwitterUrl class="form-control">
               <span class="text-danger"  asp-validation-for="TwitterUrl"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-8">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for=ImageFile class="form-control">
               <span class="text-danger"  asp-validation-for="ImageFile"></span>
            </div>
        </div>

        <button type="submit" class=" my-3 btn btn-primary">Submit</button>
    </form>
</div>

